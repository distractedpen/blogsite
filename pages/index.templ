package pages

import (
	"github.com/distractedpen/blogsite/components"
	"github.com/distractedpen/blogsite/utils"
)

templ IndexPage(articles []utils.Article) {
	<html>
		@components.Head("Distracted Penguin's Blog")
		<body>
			@components.Nav()
            <div class="container fluid">
                <h1 class="title is-large centered">Distracted Penguin's Blog</h1>
            </div>
			<aside>
				@components.ArticleList(articles)
			</aside>
            <main id="articleContent"></main>
			@components.Footer()
		</body>
	</html>
}
